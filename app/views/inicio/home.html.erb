    today = "Lunes"
when "Tuesday"
    today = "Martes"
when "Wednesday"
    today = "Miércoles"
when "Thursday"
    today = "Jueves"
when "Friday"
    today = "Viernes"
when "Saturday"
    today = "Sábado"
when "Sunday"
    today = "Domingo"
end
%>

